#!/bin/sh

# acpi alternative
# acpi | sed "s/Battery [0-9]: //;s/[Dd]ischarging, /é›»æ± /;s/[Nn]ot charging, /èª¤å·®/;s/[Cc]harging, /å……é›»/;s/[Uu]nknown, /ä¸æ˜/;s/[Ff]ull, /ãƒ•ãƒ«/;s/ \(remaining\|until charged\)//"; exit

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity 2>/dev/null) || break
	status=$(sed "s/[Dd]ischarging/ğŸ”‹:/;s/[Nn]ot charging/ğŸ›‘:/;s/[Cc]harging/ğŸ”Œ:/;s/[Uu]nknown/?:/;s/[Ff]ull/ğŸš:/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 25 ] && [ "$status" = "ğŸ”‹" ] && warn="â—"

	printf "%s%s%s%% " "$status" "$warn" "$capacity"
	unset warn
done | sed 's/ *$//'
